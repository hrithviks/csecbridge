{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "InfrastructureProvisioning",
      "Effect": "Allow",
      "Action": [
        "autoscaling:*",
        "ec2:*",
        "ecs:*",
        "elasticloadbalancing:*",
        "kms:*",
        "logs:*",
        "s3:*",
        "ssm:*",
        "sts:*",
        "iam:*"
      ],
      "Resource": "*"
    },
    {
      "Sid": "BackendStateAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${backend_bucket}",
        "arn:aws:s3:::${backend_bucket}/k8s-cluster-config/${environment}.tfvars",
        "arn:aws:s3:::${backend_bucket}/k8s-cluster/csec-${environment}.tfstate*"
      ]
    },
    {
      "Sid": "S3AccessLogBucket",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:PutObject",
        "s3:DeleteObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::${access_bucket}",
        "arn:aws:s3:::${access_bucket}/*"
      ]
    },
    {
      "Sid": "ConfigBucketAccess",
      "Effect": "Allow",
      "Action": [
        "s3:GetObject",
        "s3:ListBucket",
        "s3:GetBucketTagging"
      ],
      "Resource": [
        "arn:aws:s3:::${configbucket}",
        "arn:aws:s3:::${configbucket}/*"
      ]
    }
  ]
}